@model WebsiteAdmin.Models.CustomerViewModel

<div class="row">
    <div class="form-group col-lg-12">
        <h4>Customer Details</h4>
    </div>
    <div class="form-group col-lg-4">
        @Html.LabelFor(m => m.LastName)
        @Html.TextBoxFor(m => m.LastName, new { @class="form-control"} )
    </div>
    <div class="form-group col-lg-4">
        @Html.LabelFor(m => m.FirstName)
        @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" })
    </div>
    <div class="form-group col-lg-12">
        <label>Address</label>
        <textarea name="address" class="form-control" rows="4" data-ng-model="contact.address" data-ng-class="{inputInvalid: contactForm.address.$invalid, inputValid: address.parentName.$valid}"></textarea>
    </div>
    <div class="form-group col-lg-4">
        @Html.LabelFor(m => m.EmailAddress)
        @Html.TextBoxFor(m => m.EmailAddress, new { @class = "form-control" })
    </div>
    <div class="form-group col-lg-4">
        @Html.LabelFor(m => m.HomePhoneNumber)
        @Html.TextBoxFor(m => m.HomePhoneNumber, new { @class = "form-control" })
    </div>
    <div class="form-group col-lg-4">
        <label>Mobile Number</label>
        <input type="tel" name="mobile" class="form-control" data-ng-model="contact.mobilePhone" data-ng-class="{inputInvalid: contactForm.mobile.$invalid, inputValid: contactForm.mobile.$valid}">
    </div>
    <div class="clearfix"></div>
    <div class="form-group col-lg-12">
        <label>Any comments</label>
        <textarea class="form-control" rows="4" data-ng-model="contact.comments"></textarea>
    </div>
</div>
